{
  "name": "call-openai",
  "displayName": "call-openai",
  "description": "VS Code extension call-openai",
  "version": "0.4.4",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.setOpenAIKey",
        "title": "Set OpenAI API Key"
      },
      {
        "command": "extension.callOpenai",
        "title": "Ask OpenAI"
      },
      {
        "command": "extension.replaceByRules",
        "title": "Replace by rules"
      },
      {
        "command": "extension.fixWithOpenAI",
        "title": "Fix with OpenAI"
      },
      {
        "command": "extension.shortAnswer",
        "title": "Short answer with OpenAI"
      },
      {
        "command": "extension.listFunction",
        "title": "Show list functions"
      },
      {
        "command": "extension.searchInFunctions",
        "title": "Search in Functions (Selected Text)"
      },
      {
        "command": "extension.jumpNextLine",
        "title": "Jump Next Search Result"
      },
      {
        "command": "extension.insertLoggerDebug",
        "title": "Insert logger debug"
      },
      {
        "command": "extension.pasteMultiTimes",
        "title": "Paste multi-times"
      },
      {
        "command": "extension.replaceLimited",
        "title": "Replace limited"
      },
      {
        "command": "extension.simpleCheckReplace",
        "title": "Simple check replace"
      },
      {
        "command": "extension.docstringAuto",
        "title": "Docstring Auto"
      }
    ],
    "keybindings": [
      {
        "command": "extension.callOpenai",
        "key": "ctrl+alt+,",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.replaceByRules",
        "key": "ctrl+alt+\\",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.fixWithOpenAI",
        "key": "ctrl+alt+'",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.shortAnswer",
        "key": "ctrl+alt+=",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.listFunction",
        "key": "ctrl+alt+g",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.searchInFunctions",
        "key": "ctrl+alt+/",
        "when": "true"
      },
      {
        "command": "extension.jumpNextLine",
        "key": "ctrl+alt+.",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.insertLoggerDebug",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.pasteMultiTimes",
        "key": "ctrl+alt+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.replaceLimited",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.simpleCheckReplace",
        "key": "ctrl+alt+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.9.0"
  }
}
